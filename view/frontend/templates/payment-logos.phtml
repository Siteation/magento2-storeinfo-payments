<?php declare(strict_types=1);

use Hyva\Theme\Model\ViewModelRegistry;
use Magento\Framework\View\Element\Template;
use Magento\Framework\Escaper;
use Siteation\StoreInfoPaymentLogos\ViewModel\StorePaymentLogos;

/** @var ViewModelRegistry $viewModels */
/** @var Template $block */
/** @var Escaper $escaper */

/** @var StorePaymentLogos $storePaymentLogos */
$storePaymentLogos = $viewModels->require(StorePaymentLogos::class);
$paymentOptions = $storePaymentLogos->getPaymentMethods();
$paymentLogosBasePath = 'Siteation_StoreInfoPaymentLogos::images/payment-logos.svg';

if (!$paymentOptions) {
    return '';
}
?>

<ul class="payment-logos flex flex-wrap gap-4 max-w-md">
    <?php foreach ($paymentOptions as $option): ?>
        <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="52" height="36">
                <title><?= $escaper->escapeHtml($option) ?></title>
                <use href="<?= $block->getViewFileUrl($paymentLogosBasePath); ?>#<?= $escaper->escapeHtml($option) ?>" />
            </svg>
        </li>
    <?php endforeach; ?>
</ul>
